<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Login"

    android:background="@color/primary_background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/login_activity_hi"
        android:id="@+id/textView"
        android:textSize="@dimen/very_big_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/very_big_text_color" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/login_activity_email_text"
        android:layout_marginTop="53dp"
        android:hint="@string/login_activity_email"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/login_activity_password_text"
        android:layout_alignStart="@+id/login_activity_password_text"
        android:background="@color/email_color"
        android:textColor="@color/email_text_color"
        android:textSize="@dimen/email_text" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/login_activity_password_text"
        android:hint="@string/login_activity_password"
        android:background="@color/password_color"
        android:textColor="@color/password_text_color"
        android:layout_above="@+id/login_activity_login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:textSize="@dimen/email_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_activity_button_Login"
        android:id="@+id/login_activity_login_button"
        android:background="@color/button_color"
        android:layout_marginBottom="47dp"
        android:textSize="@dimen/button_login_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
